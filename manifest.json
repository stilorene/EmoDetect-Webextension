{
    "manifest_version": 3,
    "name": "Random Number Generator",
    "version": "1.0",
    "description": "A simple Chrome extension that shows a random number.",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "popup/website.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "CanvasOverlay/content.js"
            ]
        }
    ]
}